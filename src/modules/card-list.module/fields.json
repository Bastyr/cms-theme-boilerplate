[
  {
    "label": "Card",
    "name": "card_list",
    "type": "group",
    "required" : true,
    "occurrence": {
      "default": 3,
      "min": 1,
      "sorting_label_field": "card.heading"
    },
    "children": [
      {
        "name" : "heading",
        "label" : "Heading",
        "type" : "group",
        "children" : [
          {
            "name" : "heading_content",
            "label" : "Heading",
            "type" : "text",
            "validation_regex" : "",
            "default" : "A compelling headline"
          },
          {
            "name" : "heading_style",
            "label" : "Heading Style",
            "type" : "choice",
            "choices" : [
              [ "", "None" ],
              [ "rule", "Rule Under" ],
              [ "boxed", "Boxed" ]
            ],
            "display" : "select",
            "default" : ""
          },
          {
            "name" : "heading_size",
            "label" : "Heading Size",
            "type" : "choice",
            "choices" : [
              [ "", "Text Size" ],
              [ "h1", "Heading 1" ],
              [ "h2", "Heading 2" ],
              [ "h3", "Heading 3" ],
              [ "h4", "Heading 4" ],
              [ "h5", "Heading 5" ],
              [ "h6", "Heading 6" ]
            ],
            "default" : "h3"
          }
        ]
      },
      {
        "name" : "image",
        "label" : "Image",
        "type" : "image",
        "default" : {
          "size_type" : "auto",
          "src" : "",
          "alt" : null,
          "loading" : "lazy"
        },
        "resizable": true,
        "responsive": true,
        "show_loading": false
      },
      {
        "name" : "image_options",
        "label" : "Image Options",
        "type" : "group",
        "children" : [
          {
            "name" : "sizing",
            "label" : "Image Size",
            "type" : "choice",
            "choices" : [
              [ "cover", "Cover" ],
              [ "contain", "Contain" ]
            ],
            "default" : "cover"
          },
          {
            "name" : "position_y",
            "label" : "Vertical Position when size: 'Cover'",
            "type" : "choice",
            "choices" : [
              [ "top", "Top" ],
              [ "25%", "25% from Top" ],
              [ "center", "Center" ],
              [ "75%", "75% from Top" ],
              [ "bottom", "Bottom" ]
            ],
            "default" : "center"
          },
          {
            "name" : "position_x",
            "label" : "Horizontal Position when size 'Cover'",
            "type" : "choice",
            "choices" : [
              [ "left", "Left" ],
              [ "25%", "25% from Left" ],
              [ "center", "Center" ],
              [ "75%", "75% from Left" ],
              [ "right", "Right" ]
            ],
            "default" : "center"
          },
          {
            "name" : "repeat_y",
            "label" : "Repeat Vertically",
            "type" : "choice",
            "choices" : [
              [ "repeat", "Repeat Vertically" ],
              [ "no-repeat", "No Repeat" ]
            ],
            "default" : "no-repeat"
          },
          {
            "name" : "repeat_x",
            "label" : "Repeat Horizontally",
            "type" : "choice",
            "choices" : [
              [ "repeat", "Repeat Horzontally" ],
              [ "no-repeat", "No Repeat" ]
            ],
            "default" : "no-repeat"
          },
          {
            "name" : "is_image_figure",
            "label" : "Advanced: this image can be treated as an independent figure because its content could be included e.g. as an appendix item (Yes/No)",
            "type" : "boolean",
            "default" : false,
            "display" : "toggle"
          }
        ]
      },
      {
        "name" : "card_caption",
        "label" : "Caption",
        "type" : "text",
        "validation_regex" : "",
        "default" : "What a lovely image! A picture is worth a thousand words."
      },
      {
        "name" : "rich_text_content",
        "label" : "Rich Text Content",
        "type" : "richtext",
        "default" : "Perhaps some pithy copy to drive the point home. May I interest you in a button? Perhaps a table or a list?"
      },
      {
        "name" : "style_options",
        "label" : "Style Options",
        "type" : "group",
        "children" : [
          {
            "name" : "layout_direction",
            "label" : "Layout Direction",
            "type" : "choice",
            "choices" : [
              [ "vertical", "Vertical" ],
              [ "horizontal", "Horizontal" ]
            ],
            "default" : "vertical"
          },
          {
            "name" : "card_shadow",
            "label" : "Card Shadow",
            "type" : "boolean",
            "display" : "toggle"
          }
        ]
      }
    ],
    "default" : [
      {
        "heading" : {
          "heading_content" : "Your compelling card heading goes here",
          "heading_size" : "h3"
        },
        "rich_text_content" : "Content here. Don't forget to add an image. This is rich text, so you can add buttons, tables, and more.",
        "card_caption" : "This optional caption shows up under the card unless it's blank."
      },
      {
        "heading" : {
          "heading_content" : "Your compelling card heading goes here",
          "heading_size" : "h3"
        },
        "rich_text_content" : "Content here. Don't forget to add an image. This is rich text, so you can add buttons, tables, and more.",
        "card_caption" : "This optional caption shows up under the card unless it's blank."
      },
      {
        "heading" : {
          "heading_content" : "Your compelling card heading goes here",
          "heading_size" : "h3"
        },
        "rich_text_content" : "Content here. Don't forget to add an image. This is rich text, so you can add buttons, tables, and more.",
        "card_caption" : "This optional caption shows up under the card unless it's blank."
      }
    ]
  }
]